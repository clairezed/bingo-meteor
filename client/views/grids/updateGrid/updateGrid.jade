template(name="updateGrid")
  .row-fluid
    .col-sm-12
      +gridCreationBreadcrumb
      h1 Grid Description
      p.teaser.teaser-small It's always good to let people know a bit more about the bingo you propose them.
  form(role="form")
    .row-fluid
      .col-sm-7
        .form-group
          label(for="title") Title
          input#title.form-control(name="title" type="text" value="{{title}}")
        .form-group
          label(for="description") Description
          textarea#description.form-control(name="description" rows="4" cols="50" value=" ")=description
          p.help-block.small
            em Here comes the description of your bingo, to incitate people playing it.
        .form-group
          label(for="tags") Tags
          input#tags.form-control(name="tags" type="text" value="{{tags}}")
      .col-sm-5
        +configGrid
    .row-fluid
      .col-sm-5.col-sm-offset-7
        input.btn.btn-primary.pull-right(type="submit"  value="Modify")