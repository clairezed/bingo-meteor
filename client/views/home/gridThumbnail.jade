template(name="gridThumbnailOddCounter")
  if positionIsOdd
    ul.row
      +gridThumbnail
  else
    +gridThumbnail

template(name="gridThumbnail")
  if positionIsOdd
    .clearfix
  li.col-md-6.col-sm-6
    .grid-thumbnail-container
      .grid-thumbnail-inner
        h4
          if canModifyGrid
            a.bingo-title(href="{{pathFor 'fillGrid'}}") #{title}
          else
            = title
        //- h4
        p= description
        .row
          .col-md-12
            each tags
              span.label.label-info= this
        ul.games-creator-list(id="{{_id}}")
          each games
            +gridGamesList
      if ready
        .grid-thumbnail-btn
          a.btn.btn-primary.join-game-btn(href="#") Current games
            span.badge= games.count
          +launchGameBtn


template(name="gridGamesList")
  li
    .game-wrapper
      a.btn.btn-info.join-game(href="#")
        = creator.name
        span.badge
          = players.length
          span.glyphicon.glyphicon-user
      .join-game-actions
        a.btn.btn-sm
          if canResumeGame
            | Resume
          else
            | Join !
